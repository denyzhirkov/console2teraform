<% function normalize(name) { return (name || '').replace(/[^a-zA-Z0-9_-]/g, '_').replace(/^[^a-zA-Z_]+/, '_'); } %>
<% if (ecsTaskDefs && ecsTaskDefs.length) { ecsTaskDefs.forEach(function(taskdef) { %>
variable "<%= normalize(taskdef.resourceName) %>_arn" {
  description = "ARN for ECS Task Definition <%= taskdef.resourceName %>"
  type        = string
  default     = "<%= taskdef.taskDefinitionArn || '' %>"
}
variable "<%= normalize(taskdef.resourceName) %>_family" {
  description = "Family for ECS Task Definition <%= taskdef.resourceName %>"
  type        = string
  default     = "<%= taskdef.family || '' %>"
}
variable "<%= normalize(taskdef.resourceName) %>_tags" {
  description = "Tags for ECS Task Definition <%= taskdef.resourceName %>"
  type        = map(string)
  default     = {
<% Object.entries(taskdef.tags || {}).forEach(([k, v]) => { %>    "<%= k.replace(/"/g, '\"') %>" = "<%= v %>"
<% }) %>  }
}
<% if (taskdef.cpu) { %>variable "<%= normalize(taskdef.resourceName) %>_cpu" {
  description = "CPU for ECS Task Definition <%= taskdef.resourceName %>"
  type        = string
  default     = "<%= taskdef.cpu %>"
}
<% } %><% if (taskdef.memory) { %>variable "<%= normalize(taskdef.resourceName) %>_memory" {
  description = "Memory for ECS Task Definition <%= taskdef.resourceName %>"
  type        = string
  default     = "<%= taskdef.memory %>"
}
<% } %><% if (taskdef.networkMode) { %>variable "<%= normalize(taskdef.resourceName) %>_network_mode" {
  description = "Network mode for ECS Task Definition <%= taskdef.resourceName %>"
  type        = string
  default     = "<%= taskdef.networkMode %>"
}
<% } %>
<% }) } %> 